{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"allowJs": true,
		"checkJs": false,
		"isolatedModules": true,
		"strict": true,
		"outDir": "./dist"
	},
	"include": ["src/**/*.ts", "src/**/*.js"]
}
